generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [vector]
}

model VectorStoreDocuments {
  id        String   @id @default(uuid())
  content   String
  metadata  Json
  embedding Unsupported("vector(1536)")

  @@map("vectorstore_documents")
}

model UserMemory {
  id        Int      @id @default(autoincrement())
  userId    String
  content   String
  embedding Unsupported("vector(1536)")
  timestamp DateTime @default(now())
  type      String   // 'personal_info', 'user_message', 'ai_response'
  messageContext String? // Dodatkowy kontekst wiadomo≈õci
}

model Conversation {
  id        Int       @id @default(autoincrement())
  userId    String
  messages  Message[]
  latest    Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([userId, latest])
}

model Message {
  id             Int          @id @default(autoincrement())
  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  content        String
  role           String       // 'user' lub 'assistant'
  timestamp      DateTime     @default(now())

  @@index([conversationId])
} 